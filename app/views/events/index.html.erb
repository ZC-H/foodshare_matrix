


<div class="container-fluid" id="background-all">
	<div class="row profile">

		<!-- PAGE CONTENT -->
			<div class="col-md-8" id="each-blog-follow">
				<h1>All Events</h1>
				<% @events.each do |event| %>
					<div class="row">
						<div class="col-lg-12 " id="blog-post">
							<div class="media">
								<a class="pull-left" href="#">
									
							  <% if !event.user.avatar.present? %>
								<%= link_to image_tag("http://csundesignhub.org/wp-content/uploads/2015/06/profile_placeholder.png", class: "img-responsive pull-left", style: "width: 100px;height:100px;margin-right:10px;"), user_path(event.user) %>
									   
									  <% else %>
										 <%= image_tag(event.user.avatar) %><br>
								<% end %>   

								</a>
								<div class="media-body" id="blog-content">
									<h4 class="media-heading">
										<%= event.user.name %>
									</h4>
									<small><%= event.updated_at.localtime.to_date %><br><%= event.updated_at.localtime.strftime(" %H:%M:%S") %></small>
									<h4><%= link_to event.name, event_path(event) %></h4>
									<h4>Location: <%= event.location.name %></h4>
									<button type="button" class="btn btn-success btn-sm">Attend Event</button>
									<hr>
									<p id="description"><%= event.description %></p>
									<p><%= link_to "More info", event_path(event) %></p>

								</div>
							</div>

						</div>

						

					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>


