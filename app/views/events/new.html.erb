





<div class="container-fluid">
    <div class="row profile">



        <!-- PAGE CONTENT -->
        <div class="col-md-10">
            <div class="profile-content">

            
			<div class="well">
				<%= image_tag "http://maps.googleapis.com/maps/api/staticmap?center=#{@location.latitude},#{@location.longitude}&markers=#{@location.latitude},#{@location.longitude}&zoom=17&size=640x400&key=#{ENV['MAPS_KEY']}",
              class: 'img-fluid img-rounded', alt: "Event Location Preview" %>

				<h1>Create new event</h1>

				<%= form_for @event do |f| %>

					<%= render "events/form", f: f %>
					<%= f.hidden_field "location", :value => @locjson %>
					  <p>
					    <%= f.submit "Create Event", :class => 'btn btn-primary btn-lg' %>
					     <%= link_to "Cancel", events_path, :class => 'btn btn-primary btn-lg' %>
					  </p>
					<% end %>

			</div>

			

              

            

            </div>
        </div>



    </div>
</div>


