
<div class="container-fluid" id="background-all">
    <div class="row profile">
        <!-- PAGE CONTENT -->
        <div class="col-md-10">
            <% if @nearbyevents != [] %>
                <div class="panel panel-danger">
                    <div class="panel-heading">Overlapping Locations</div>
                    <div class="panel-body">Another event is happening nearby <%= @event.date == Date.today ? "today" : "on this date" %>. See details: <br>
                        <% @nearbyevents.each do |ev| %>
                            <%= link_to ev.name, ev, target: :_blank %>
                        <% end %>
                    </div>
                </div>
            <% end %>
            <h1>Step 2: Details</h1>
            <div class="profile-content">
              <%= image_tag "http://maps.googleapis.com/maps/api/staticmap?center=#{@location.latitude},#{@location.longitude}&markers=#{@location.latitude},#{@location.longitude}&zoom=17&size=940x400&key=#{ENV['MAPS_KEY']}",
              class: 'img-fluid img-rounded', alt: "Event Location Preview" %>
                <div id="postlist" id="post-box">
                    <%= form_for @event do |f| %>
                        <%= render "events/form", f: f %><br>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>

