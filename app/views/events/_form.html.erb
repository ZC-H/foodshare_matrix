

<div class="container-fluid" id="background-all">
    <div class="row profile">
        <!-- PAGE CONTENT -->
        <div class="col-md-10" id="content-background">
            <div class="profile-content">
                <div class="event-form">
                    <div class="row" id="event-form-row">
                        <div class="col-lg-12">
                            
                            <div class="widget-area no-padding blank">
                                <div>
                                        <div class="form-group">
                                             <%= f.text_field :name, class: "form-control", placeholder: "What's the event name?",id: "username",tabindex: "1" %>
                                        </div>
                                        
                                        <div class="form-group">
                                             <%= f.text_area :description, class: "form-control", placeholder: "Tell us more about the event...",id: "event-des",tabindex: "1" %>
                                        </div>
                                        <div class="form-group">
                                        	<label for="form-control">Number of people helping in the event?</label>
                                             <%= f.number_field :expected, class: "form-control", placeholder: "1",id: "num-people",tabindex: "2" %>
                                        </div>
                                      <div class="form-group">
                                      </div>
                                      		<label for="form-control">Number of serving for food?</label>
                                           <%= f.number_field :food_amount, class: "form-control", placeholder: "10",id: "num-people",tabindex: "2" %>
                                      </div>
                                        <div class="form-group">
                                            <div class="row" id="event-button">
                                                <div class="col-sm-6 col-sm-offset-3">
                                                    <%= f.submit 'Create Event', {class: 'form-control btn-success btn-register',name: 'register-submit', id:'register-submit', tabindex: '4'} %>
                                                    <%= link_to "Cancel", events_path, {class: 'form-control btn-danger btn-register',name: 'register-submit', id:'register-submit-cancel', tabindex: '4'} %>
                                                </div>
                                            </div>
                                        </div>
                               
                                </div><!-- Status Upload  -->
                            </div><!-- Widget Area -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


