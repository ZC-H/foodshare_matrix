

<div class="container-fluid">
    <div class="row profile">
        <!-- PAGE CONTENT -->
        <div class="col-md-10">
            <h3>My Blog</h3>
            <div class="profile-content">
				<div class="event-form">
					<div class="row">
						<div class="col-lg-3"></div>
						<!-- map goes into this div -->
						<div class="col-lg-6"></div> 
						<div class="col-lg-3"></div>
					</div>
					<div class="row" id="event-form-row">
						<div class="col-lg-12">
    						<div class="widget-area no-padding blank">
                                <div class="status-upload">
                                    <%= form_tag '/blog_post' do%>
                                     <div class="form-group">
                                       <label for="exampleInputEmail1">Title</label>
                                       <input name="title" type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Title of your post...">
                                     </div>
                                        <textarea name='textarea' placeholder="What are you doing right now?" ></textarea>
                                        <button type="submit" class="btn btn-success green"><i class="fa fa-share"></i> Share</button>
                                    <% end %>
                                </div><!-- Status Upload  -->
                            </div><!-- Widget Area -->
                        </div>
					</div>
				</div>
			</div>

            <div class="line"></div>

            <% BlogEntry.all.each do |b|%>
            <div class="row">
                <div class="col-lg-12">
                    <div id="postlist" id="post-box">
                        <div class="panel" id="post-border">
                            <div class="panel-heading">
                                <div class="text-center">
                                    <div class="row">
                                        <div class="col-sm-9" id="blog-card">
                                            <h3 class="pull-left"><%= b.title %>
                                            </h3>
                                            <h4 class="pull-left">
                                            <small><em>
                                                <%= b.created_at %><br></em></small>
                                            </h4>
                                            
                                        </div>
                                        <div class="col-sm-3" id ="delete-option">
                                            <ul class="pull-right">
                                                <li class="nav-item dropdown">
                                                    <a href="" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                                        <i class="glyphicon glyphicon-option-horizontal"></i>

                                                    </a>
                                                    <ul class="dropdown-menu" id="blog-option">
                                                        <li><a href="#">Edit</a></li>
                                                        <li><a href="#">Delete</a></li>
                                                    </ul>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>   
                            <div class="panel-body">
                               <%= b.description %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <% end %>
        </div>
    </div>
</div>


<div class="container-fluid">
    <div class="footer">
