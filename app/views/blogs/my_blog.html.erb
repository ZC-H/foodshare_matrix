

<div class="container-fluid" id="background-all">
    <div class="row profile">
        <!-- PAGE CONTENT -->
        <div class="col-md-10" id="content-background">
            <div class="profile-content">
				<div class="event-form">
					<div class="row">
						<div class="col-lg-3"></div>
						<!-- map goes into this div -->
						<div class="col-lg-6"></div> 
						<div class="col-lg-3"></div>
					</div>
					<div class="row" id="event-form-row">
						<div class="col-lg-12">
    						<div class="widget-area no-padding blank">
                                <div class="status-upload">
                                    <%= form_tag '/blog_post' do%>
                                     <div class="form-group">
                                       <label for="exampleInputEmail1">  <h3>My Blog</h3></label>
                                       <input name="title" type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Title of your post...">
                                     </div>
                                        <textarea name='textarea' placeholder="What are you doing right now?" ></textarea>
                                        <button type="submit" class="btn btn-success green"><i class="fa fa-share"></i> Share</button>
                                    <% end %>
                                </div><!-- Status Upload  -->
                            </div><!-- Widget Area -->
                        </div>
					</div>
				</div>
			</div>
            
            <div class="col-md-10" id="each-blog">
                
                <% BlogEntry.all.each do |b|%>
                    <% if current_user.id == b.user_id %>
                    <div class="row">
                        <div class="col-lg-12 " id="blog-post">
                            <div class="media">
                                <a class="pull-left" href="#">
                                    <img src="http://csundesignhub.org/wp-content/uploads/2015/06/profile_placeholder.png" class="img-responsive" alt="" style="width: 100px;height:100px;">
                                </a>
                                <div class="media-body" id="blog-content">
                                    <h4 class="media-heading">
                                        <%= current_user.name%>
                                    </h4>
                                    <small><%=b.created_at%></small>
                                    <h4>Subject: <%=b.title%></h4>
                                    <hr>
                                    <p id="description"><%=b.description%></p>

                                </div>
                            </div>

                        </div>

                        

                    </div>
                    <% end %>
                <% end %>
            </div>
        </div>
    </div>
</div>


