

<div class="container-fluid">
    <div class="row profile">


    <!-- SIDEBAR -->
        <div class="col-md-2">
            <div class="profile-sidebar">
                <!-- SIDEBAR USERPIC -->
                <div class="profile-userpic">
                    <img src="https://crunchbase-production-res.cloudinary.com/image/upload/c_thumb,h_256,w_256,f_auto,g_faces,z_0.7,q_auto:eco/v1466591235/kqksgid3mofshmeq0yhs.png" class="img-responsive" alt="">
                </div>
                <!-- END SIDEBAR USERPIC -->
                <!-- SIDEBAR USER TITLE -->
                <div class="profile-usertitle">
                    <div class="profile-usertitle-name">
  
                    </div>
                    <div class="profile-usertitle-job">

                    </div>
                </div>
                <!-- END SIDEBAR USER TITLE -->
                <!-- SIDEBAR BUTTONS -->
                <div class="profile-userbuttons">
                    <button type="button" class="btn btn-success btn-sm">Follow</button>
                    <button type="button" class="btn btn-danger btn-sm">Message</button>
                </div>
                <!-- END SIDEBAR BUTTONS -->
                <!-- SIDEBAR MENU -->
                <div class="profile-usermenu">
                    <ul class="nav">
                        <li>
                            <a href="#">
                            <i class="glyphicon glyphicon-home"></i>
                            Home </a>
                        </li>
                        <li>
                            <a href="#" target="_blank">
                            <i class="glyphicon glyphicon-calendar"></i>
                            Events </a>
                        </li>
                        <li class="dropdown active">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="glyphicon glyphicon-th-large"></i>
                             Blogs</a>
                             <ul class="dropdown-menu" id="dropdown">
                                 <li><a href="/my_blog">My Blog</a></li>
                                 <li><a href="/following_blog">Following Blog</a></li>
                                 <li><a href="#">Browse Blog</a></li>
                             </ul>
                        </li>
                        <li>
                            <a href="#" target="_blank">
                            <i class="glyphicon glyphicon-log-out"></i>
                            Logout</a>
                        </li>
                    </ul>
                </div>
                <!-- END MENU -->
            </div>
        </div>


        <!-- PAGE CONTENT -->
        <div class="col-md-10">
            <div class="profile-content">
				<div class="event-form">
					<div class="row">
						<div class="col-lg-3"></div>
						<!-- map goes into this div -->
						<div class="col-lg-6"></div> 
						<div class="col-lg-3"></div>
					</div>
					<div class="row" id="event-form-row">
                        <h2>My Blog</h2>
						<div class="col-lg-12">
    						<div class="widget-area no-padding blank">
                                <div class="status-upload">
                                    <%= form_tag '/blog_post' do%>
                                     <div class="form-group">
                                       <label for="exampleInputEmail1">Title</label>
                                       <input name="title" type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Title of your post...">
                                     </div>
                                        <textarea name='textarea' placeholder="What are you doing right now?" ></textarea>
                                        <button type="submit" class="btn btn-success green"><i class="fa fa-share"></i> Share</button>
                                    <% end %>
                                </div><!-- Status Upload  -->
                            </div><!-- Widget Area -->
                        </div>
						</div>
					</div>
				</div>

                <div class="line"></div>

                <% BlogEntry.all.each do |b|%>
                <div class="row">
                    <div class="col-lg-12">
                        <div id="postlist" id="post-box">
                            <div class="panel" id="post-border">
                                <div class="panel-heading">
                                    <div class="text-center">
                                        <div class="row">
                                            <div class="col-sm-9">
                                                <h3 class="pull-left"><%= b.title %></h3>
                                            </div>
                                            <div class="col-sm-3">
                                                <h4 class="pull-right">
                                                <small><em>
                                                    <%= b.created_at %><br></em></small>
                                                </h4>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                
                            <div class="panel-body">
                               <%= b.description %></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <% end %>
        </div>
    </div>
</div>


