


<div class="container-fluid" id="background-all">
    <div class="row profile">

        <!-- PAGE CONTENT -->
            <div class="col-md-8" id="each-blog-follow">
                <h1>Browse</h1>
                <% BlogEntry.all.each do |b|%>
                <% if current_user.id != b.user_id %>
                    <div class="row">
                        <div class="col-lg-12 " id="blog-post">
                            <div class="media">
                                <a class="pull-left" href="#">
                                    <img src="http://csundesignhub.org/wp-content/uploads/2015/06/profile_placeholder.png" class="img-responsive" alt="" style="width: 100px;height:100px;">
                                </a>
                                <div class="media-body" id="blog-content">
                                    <h4 class="media-heading">
                                        <%= User.find_by(id: b.user_id).name%>
                                    </h4>
                                    <small><%=b.created_at%></small>
                                    <h4>Subject: <%=b.title%></h4>
                                    <% if current_user != b.user %>
                                        <% if !current_user.followtargets.include?(b.user) %>
                                            <%= form_tag '/users/' + b.user_id.to_s + '/follow' do %>
                                                <input type=submit class="btn btn-success btn-sm" value="Follow">
                                            <% end %>
                                        <% else %>
                                           <%= form_tag '/users/' + b.user_id.to_s + '/unfollow' do %>
                                              <input type=submit class="btn btn-danger btn-sm" value="Unfollow">
                                            <% end %>
                                        <% end %>
                                    <% end %>
                                    <hr>
                                    <p id="description"><%=b.description%></p>

                                </div>
                            </div>

                        </div>

                        

                    </div>
                    <% end %>
                <% end %>
            </div>
        </div>
    </div>
</div>


