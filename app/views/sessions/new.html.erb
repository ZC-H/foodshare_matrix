<div class="login-background">
	<div class="container" id="login-container">
	    	<div class="row">
				<div class="col-md-6 col-md-offset-3">
					<div class="panel panel-login">
						<div class="panel-heading">
							<div class="row">
								<div class="col-xs-6">
									<a href="#" class="active" id="login-form-link">Login</a>
								</div>
								<div class="col-xs-6">
									<a href="#" id="register-form-link">Register</a>
								</div>
							</div>
							<hr>
						</div>
						<div class="panel-body">
							<div class="row">
								<div class="col-lg-12">
									<%= form_for :session, url: session_path,:html => { :id => 'login-form' } do |f| %>
										<div class="form-group">
											<input type="text" name="session[email]" id="username" tabindex="1" class="form-control" placeholder="Email" value="">
										</div>
										<div class="form-group">
											<input type="password" name="session[password]" id="password" tabindex="2" class="form-control" placeholder="Password">
										</div>
										<div class="form-group text-center">
											<input type="checkbox" tabindex="3" class="" name="remember" id="remember">
											<label for="remember"> Remember Me</label>
										</div>
										<div class="form-group">
											<div class="row">
												<div class="col-sm-6 col-sm-offset-3">
													<%= f.submit 'Login', {class: 'form-control btn-success btn-login', id:'login-btn', tabindex: '4'} %>
												</div>
											</div>
										</div>
										<div class="form-group">
											<div class="row">
												<div class="col-lg-12">
													<div class="text-center">
														<a href="https://phpoll.com/recover" tabindex="5" class="forgot-password">Forgot Password?</a>
													</div>
												</div>
											</div>
										</div>
									<% end %>
									<!-- <form id="register-form" action="https://phpoll.com/register/process" method="post" role="form" style="display: none;"> -->
									<%= form_for @user, :html => { :id => 'register-form' } do |f| %>
										<div class="form-group">
											 <%= f.text_field :name, class: "form-control", placeholder: "Full Name",id: "username",tabindex: "1" %>
										</div>
										
										<div class="form-group">
											 <%= f.email_field :email, class: "form-control", placeholder: "Email Address",id: "email",tabindex: "1" %>
										</div>
										<div class="form-group">
											 <%= f.password_field :password, class: "form-control", placeholder: "Password",id: "password",tabindex: "2" %>
										</div>
										<div class="form-group">
											<label class="radio-inline">
											      <input type="radio" name="user[role]" value="community" required>Community
											    </label>
											    <label class="radio-inline">
											      <input type="radio" name="user[role]" value="personal" required>Personal
											    </label>
										</div>
										<div class="form-group">
											<div class="row">
												<div class="col-sm-6 col-sm-offset-3">
													<%= f.submit 'Register now', {class: 'form-control btn-success btn-register',name: 'register-submit', id:'register-submit', tabindex: '4'} %>
												</div>
											</div>
										</div>
									<% end %>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
</div>







