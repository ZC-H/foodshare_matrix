<div class="container-fluid" id="background-all">
    <div class="row profile">

        <!-- PAGE CONTENT -->
            <div class="col-md-8" id="each-blog-follow">
                <h1><u>My Profile</u></h1>
                <p>Name: <%= @user.name %></p>
                <p>Email: <%= @user.email %></p>
                <p>Role: <%= @user.role %></p>

                <div class="line"></div>
                
                <h1>My Events</h1>
                <% @events.each do |event| %>
                    <div class="row">
                        <div class="col-lg-12 " id="blog-post">
                            <div class="media">
                                <a class="pull-left" href="#">
                                    <img src="https://crunchbase-production-res.cloudinary.com/image/upload/c_thumb,h_256,w_256,f_auto,g_faces,z_0.7,q_auto:eco/v1466591235/kqksgid3mofshmeq0yhs.png" class="img-responsive" alt="" style="width: 100px;height:100px;">
                                </a>
                                <div class="media-body" id="blog-content">
                                    <h4 class="media-heading">
                                       <%= event.user.name %>
                                    </h4>
                                    <small><%= event.updated_at.localtime.to_date %><br><%= event.updated_at.localtime.strftime(" %H:%M:%S") %></small>
                                    <h4><%= link_to event.name, event_path(event) %></h4>
                                    <h4>Location:<%= event.location.name %></h4>
                                    <hr>
                                    <p id="description"><%= event.description %></p>
                                    <p><%= link_to "More info", event_path(event) %></p>
                                </div>
                            </div>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>


