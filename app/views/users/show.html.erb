


<div class="container-fluid">
    <div class="row profile">

        <!-- PAGE CONTENT -->
        <div class="col-md-10">
            <div class="profile-content">


            <h4><u>My Profile</u></h4>
            <p>Name: <%= @user.name %></p>
            <p>Email: <%= @user.email %></p>
            <p>Role: <%= @user.role %></p>

            <div class="line"></div>

          

            <h4><u>My Events</u></h4>




            <% @events.each do |event| %>
                    
                  
                        <div class="well">

                            <h4><%= link_to event.name, event_path(event) %></h4>
                            <p>Posted by: <%= event.user.name %></p>
                            <p>Location name: <%= event.location.name %></p>
                            <p>Event description: <%= event.description %></p>
                            <p><%= link_to "More info", event_path(event) %></p>
                            

                        </div>
                        <div class="line"></div>
                    
                <% end %>
              

                

                
            

            </div>
        </div>



    </div>
</div>


