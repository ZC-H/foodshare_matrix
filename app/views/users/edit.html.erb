

<div class="container-fluid" id="background-all">
    <div class="row profile">
        <!-- PAGE CONTENT -->
        <div class="col-md-10" id="content-background">
            <div class="profile-content">
				<div class="event-form">
					<div class="row" id="event-form-row">
						<div class="col-lg-12">
    						<div class="widget-area no-padding blank">
                                <div class="status-upload">
                                	 <%= form_for @user, :method => :put do |f| %>
                                		<div class="form-group">
                                			 <%= f.text_field :name, class: "form-control", placeholder: "Full Name",id: "username",tabindex: "1" %>
                                		</div>
                                		
                                		<div class="form-group">
                                			 <%= f.email_field :email, class: "form-control", placeholder: "Email Address",id: "email",tabindex: "1" %>
                                		</div>
                                		<div class="form-group">
                                			 <%= f.password_field :password, class: "form-control", placeholder: "Password",id: "password",tabindex: "2" %>
                                		</div>
                                		<div class="form-group">
                                			<label class="radio-inline">
                                			      <input type="radio" name="user[role]" value="community" required>Community
                                			    </label>
                                			    <label class="radio-inline">
                                			      <input type="radio" name="user[role]" value="personal" required>Personal
                                			    </label>
                                		</div>
                                		<div class="form-group">
                                			<div class="row">
                                				<div class="col-sm-6 col-sm-offset-3">
                                					<%= f.submit 'Update', {class: 'form-control btn-success btn-register',name: 'register-submit', id:'register-submit', tabindex: '4'} %>
                                					<%= link_to "Cancel", root_path, {class: 'form-control btn-danger btn-register',name: 'register-submit', id:'register-submit-cancel', tabindex: '4'} %>
                                				</div>
                                			</div>
                                		</div>
                                	<% end %>
                                </div><!-- Status Upload  -->
                            </div><!-- Widget Area -->
                        </div>
					</div>
				</div>
			</div>
        </div>
    </div>
</div>


